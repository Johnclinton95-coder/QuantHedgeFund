# ============================================
# Quant Hedge Fund - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values

# ===================
# API Keys (Required)
# ===================
FMP_API_KEY=your_fmp_api_key_here
DATALINK_API_KEY=your_datalink_api_key_here
OPENAI_API_KEY="sk-..."             # Optional if using Grok
GROK_API_KEY="xai-..."               # For xAI Grok Integration
TWELVE_DATA_API_KEY="td_..."

# ===================
# Database Settings
# ===================
DUCKDB_PATH=./data/quant.duckdb
CACHE_DIR=./data/cache

# ===================
# MLflow Settings
# ===================
MLFLOW_TRACKING_URI=http://127.0.0.1:5050
MLFLOW_EXPERIMENT_NAME=Nightly Backtest

# ===================
# Interactive Brokers
# ===================
IB_HOST=127.0.0.1
IB_PORT=7497
IB_CLIENT_ID=1
IB_PAPER_TRADING=true

# ===================
# Dashboard Settings
# ===================
DASHBOARD_PORT=8501
DASHBOARD_DATA_DIR=./data/outputs
DASHBOARD_PASSWORD=your_secure_password_here

# ===================
# OpenAI (Optional - for AI Research Assistant)
# ===================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4.1-mini

# ===================
# Orchestration
# ===================
LUIGI_PORT=8082
PREFECT_API_URL=http://127.0.0.1:4200

# ===================
# Logging
# ===================
LOG_LEVEL=INFO
LOG_DIR=./logs
